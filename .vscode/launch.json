    "version": "0.2.0",
    "configurations": [
        {
            "name": "Interactive",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/stacks-cli.go",
            "args": [
                "interactive"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Integration Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/testing/integration",
            "args": [
            ],
            "buildFlags": "-tags integration",
            "cwd": "${workspaceFolder}/local/inttests"
        },
        
        {
            "name": "Scaffold",
            "type": "go",
            "request": "launch",
            // "logOutput": "debugger",
            // "showLog": true,
            "mode": "debug",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/stacks-cli.go",
            // "program": "${workspaceFolder}/_examples/main.go",
            "debugAdapter": "dlv-dap",
            "env": {
                // "AMIDOSTACKS_LOG": "TRACE"
                // "AMIDOSTACKS_CONFIG": "_examples/test.yml"
            },
            "args": [
                "scaffold", "-c", "${workspaceFolder}/local/stacks_config.yml"
                // "scaffold", "--onlinehelp"
            ]
        },
        {
            "name": "Export",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/stacks-cli.go",
            "debugAdapter": "dlv-dap",
            "env": {
                // "AMIDOSTACKS_LOG": "TRACE"
                // "AMIDOSTACKS_CONFIG": "_examples/test.yml"
            },
            "args": [
                "export", "-d", "local/exported",
            ]
        },
        {
            "name": "Setup",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/stacks-cli.go",
            "debugAdapter": "dlv-dap",
            "args": [
                "setup", "-g", "--project", "fred", "--company", "ensono",
            ]
        },
        {
            "name": "API",
            "type": "go",
            "request": "launch",
            // "logOutput": "debugger",
            // "showLog": true,
            "mode": "debug",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/stacks-cli.go",
            // "program": "${workspaceFolder}/_examples/main.go",
            "debugAdapter": "dlv-dap",
            "env": {
                // "AMIDOSTACKS_LOG": "TRACE"
                // "AMIDOSTACKS_CONFIG": "_examples/test.yml"
            },
            "args": [
                // "scaffold", "-c", "${workspaceFolder}/local/stacks.yml"
                "api"
            ]
        }
    ]
}
